#!/bin/bash

if [ "$(id -nu)" != "xroad" ]; then
  echo this script must run under xroad user
  exit 1
fi

. /etc/xroad/services/signer-console.conf

RLWRAP=""
if [[ -t 0 && -x /usr/bin/rlwrap ]]; then
  RLWRAP=/usr/bin/rlwrap
fi

$RLWRAP "${JAVA_HOME}/bin/java" ${SIGNER_CONSOLE_PARAMS} ${XROAD_PARAMS} -jar /usr/share/xroad/jlib/signer-console.jar "$@"
